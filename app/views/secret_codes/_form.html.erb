<div class="container">
  <%= form_with(model: secret_code, local: true, class: "form-horizontal") do |form| %>
    <% if secret_code && secret_code.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(secret_code.errors.count, "error") %> prohibited this secret_code from being saved:</h2>
        <ul>
        <% secret_code.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <label class="control-label col-sm-2" for="secret_code_user_id">Email:</label>
      <div class="col-sm-10">
        <%= form.object.email_tag({_form: form}) %>
      </div>
    </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="secret_code_user_id"><%= form.object.secret_code_text({_form: form}) %></label>
        <div class="col-sm-10">
          <%= form.object.select_quantity({_form: form})  %>
        </div>
      </div>
        
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
         <%= form.submit class: "btn btn-default"%>
      </div>
    </div>
  <% end %>
</div>
